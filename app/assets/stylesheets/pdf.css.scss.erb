#pdf {
  font-family: "Source Code Pro", Arial, monospace;
}

div.page-break {
  page-break-before: always;
}

.candidate-list {
  float:left;
  height:100%;
  width:49%;
  border-right: dashed 1px;
}

.voting-form-right-half {
  float:right;
  height:100%;
  width:49%;
  text-align: center;
}

.voting-form-vote {
  margin:0;
  padding:0;
  height: 50%;
  border-bottom: dashed 1px;
}

.circle {
  margin: 30px 0 0 70px;
  width: 200px;
  height: 200px;
  border: 2px solid;
  -moz-border-radius: 50%;
  -webkit-border-radius: 50%;
  border-radius: 50%;

  .label {
    margin-top: 43%;
    margin-left: 15%;
    text-align: left;
  }
}

.qr {
  table {
    border-width: 0;
    border-style: none;
    border-color: #0000ff;
    border-collapse: collapse;
  }

  td {
    border-left: solid 10px #000;
    padding: 0;
    margin: 0;
    width: 0;
    height: 10px;
  }

  td.black { border-color: #000; }
  td.white { border-color: #fff; }
}
