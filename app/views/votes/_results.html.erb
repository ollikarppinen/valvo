<legend>Results</legend>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Votes</th>
    </tr>
  </thead>

  <tbody>
    <% candidates.each_with_index do |candidate, i| %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= candidate.name %></td>
        <td><%= candidate.votes %></td>
      </tr>
    <% end %>
  </tbody>
</table>
