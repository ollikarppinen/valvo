<%= render partial: "shared/notice", locals: { notice: notice } %>

<legend class="lead">Vote info</legend>
Vote status: <%= @voting_decision.vote.status %>
<br/>
<% if @voting_decision.candidate_number %>
  <% if @voting_decision.created_at == @voting_decision.updated_at %>
    You have voted <%= time_ago_in_words(@voting_decision.created_at) %> ago
  <% else %>
    You have updated your vote <%= time_ago_in_words(@voting_decision.updated_at) %> ago
  <% end %>
<% else %>
  You have not voted yet
<% end %>
<br />
You voted for <%= @voting_decision.candidate_number %>
<br />
<% if @voting_decision.candidate %>
  Candidate: <%= @voting_decision.candidate.name %>
<% end %>

<% if @voting_decision.vote.ongoing? %>
  <%= render 'form', voting_decision: @voting_decision %>
<% end %>
